<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.Mycalculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Цвета темы -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Настройка окна -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Тема для Splash Screen -->
    <style name="Theme.Mycalculator.Splash" parent="Theme.SplashScreen">
        <!-- Цвет фона Splash -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Логотип -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/splash</item>

        <!-- Тема после Splash -->
        <item name="postSplashScreenTheme">@style/Theme.Mycalculator</item>
    </style>

</resources>
